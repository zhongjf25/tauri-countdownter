{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-countdown",
  "version": "0.1.0",
  "identifier": "com.tauri-countdown.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "番茄计时器",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 500,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico", 
      "icons/tomato.png"
    ]
  }
}
